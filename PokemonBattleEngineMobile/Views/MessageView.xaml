<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kermalis.PokemonBattleEngineMobile.Views.MessageView">
    <ListView x:Name="Listv" ItemsSource="{Binding Messages}" BackgroundColor="White">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <Image Source="{Binding ImageSource}" HorizontalOptions="{Binding Alignment}" Scale="{Binding Scale}" />
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentView>