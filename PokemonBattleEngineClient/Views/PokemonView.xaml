<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:gif="clr-namespace:AvaloniaGif;assembly=AvaloniaGif"
             Height="192" Width="192" IsVisible="{Binding Visible}">
  <UserControl.RenderTransform>
    <ScaleTransform ScaleX="{Binding Scale}" ScaleY="{Binding Scale}"/>
  </UserControl.RenderTransform>
  <!--<Border BorderBrush="{DynamicResource ThemeAccentBrush}" BorderThickness="1">-->
  <Canvas>
    <Image Name="Sprite"
           ZIndex="1" Stretch="None"
           HorizontalAlignment="Center" VerticalAlignment="Bottom"
           Canvas.Left="0" Canvas.Top="0"
           Height="192" Width="192"
           RenderOptions.BitmapInterpolationMode="Default"
           gif:GifImage.SourceUri="{Binding Source}">
      <ToolTip.Tip>
        <StackPanel>
          <TextBlock Classes="h1" Text="{Binding Pokemon}"/>
        </StackPanel>
      </ToolTip.Tip>
    </Image>
    <!--
      <Image Name="Shadow"
             ZIndex="0" Stretch="None"
             HorizontalAlignment="Center" VerticalAlignment="Bottom"
             Canvas.Left="{Binding ShadowX}" Canvas.Top="{Binding ShadowY}"
             Height="192" Width="192"
             RenderOptions.BitmapInterpolationMode="Default"
             gif:GifImage.SourceUri="{Binding Source}"/>
        -->
  </Canvas>
  <!--</Border>-->
</UserControl>