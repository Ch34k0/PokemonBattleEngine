<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             IsVisible="{Binding Visible}">
  <Canvas Width="100" Height="23">
    <Rectangle Width="100" Height="23" Fill="#E0E0E0" Stroke="Black" StrokeThickness="1" ZIndex="0"/>
    <TextBlock Canvas.Left="2" Canvas.Top="2" Text="{Binding Nickname}" FontSize="16" FontFamily="resm:Kermalis.PokemonBattleEngineClient.Assets.Fonts?assembly=PokemonBattleEngineClient#Pokémon B/W" ZIndex="1"/>
    <TextBlock Canvas.Right="2" Canvas.Top="2" Text="{Binding Level}" FontSize="16" FontFamily="resm:Kermalis.PokemonBattleEngineClient.Assets.Fonts?assembly=PokemonBattleEngineClient#Pokémon B/W" ZIndex="1"/>
    <TextBlock Canvas.Left="2" Canvas.Bottom="1" Text="{Binding Status}" FontSize="11" FontFamily="resm:Kermalis.PokemonBattleEngineClient.Assets.Fonts?assembly=PokemonBattleEngineClient#Pokémon B/W" ZIndex="1"/>
    <Rectangle Width="48" Height="5" Canvas.Left="49" Canvas.Top="15" Fill="Transparent" Stroke="Black" StrokeThickness="1" ZIndex="2"/>
    <Line StartPoint="49,18" EndPoint="{Binding HPEndLocation}" Stroke="{Binding HPColor}" StrokeThickness="3" ZIndex="1"/>
  </Canvas>
</UserControl>