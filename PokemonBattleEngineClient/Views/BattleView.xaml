<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:Kermalis.PokemonBattleEngineClient.Views;assembly=PokemonBattleEngineClient">
  <Canvas Background="Orange" Height="500" Width="700">
    <views:PokemonView Name="Battler0_2" ZIndex="1" Canvas.Left="0" Canvas.Top="300"/>
    <views:PokemonView Name="Battler0_0" ZIndex="0" Canvas.Left="150" Canvas.Top="280"/>
    <views:PokemonView Name="Battler0_1" ZIndex="1" Canvas.Left="300" Canvas.Top="320"/>

    <views:PokemonView Name="Battler1_2" ZIndex="0" Canvas.Left="375" Canvas.Top="0"/>
    <views:PokemonView Name="Battler1_0" ZIndex="1" Canvas.Left="450" Canvas.Top="10"/>
    <views:PokemonView Name="Battler1_1" ZIndex="0" Canvas.Left="525" Canvas.Top="5"/>

    <Line
      StartPoint="0,422" EndPoint="700,422"
      Stroke="#80000000" StrokeThickness="2"
      IsVisible="{Binding IsMessageBoxVisible}" ZIndex="2"/>
    <TextBlock
      Text="{Binding Message}" TextAlignment="Center"
      Background="#A0000000" Foreground="White"
      FontSize="28" FontFamily="resm:Kermalis.PokemonBattleEngineClient.Assets.Fonts?assembly=PokemonBattleEngineClient#Pixel Operator"
      Height="62" Width="700" Canvas.Top="425"
      IsVisible="{Binding IsMessageBoxVisible}" ZIndex="2"/>
    <Line
      StartPoint="0,490" EndPoint="700,490"
      Stroke="#80000000" StrokeThickness="2"
      IsVisible="{Binding IsMessageBoxVisible}" ZIndex="2"/>
  </Canvas>
</UserControl>